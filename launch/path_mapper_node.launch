	<!-- </node> -->

<!-- ROVIO -->
	<node pkg="trajectory_mapper" name="mapper_vio$(arg VI)" type="trajectory_mapper_node" output="screen">
		<remap from="/tf_msg" to="/rovio$(arg camera)/T_CW" />
		<remap from="/path" to="/path_rovio$(arg camera)" />

	</node>

