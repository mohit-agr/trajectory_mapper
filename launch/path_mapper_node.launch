<launch>

	<arg name="camera" default="0"/>
	<arg name="VI" default="0"/>
<!-- EXTERNAL -->
	<node pkg="trajectory_mapper" name="mapper_ext$(arg VI)" type="trajectory_mapper_node" output="screen">
		<remap from="/tf_msg" to="/tf_vi$(arg VI)_cam$(arg camera)" />
		<!-- <remap from="/tf_msg" to="/camera_imu/vrpn_client/raw_transform" /> -->
		<remap from="/path" to="/path_ext$(arg VI)" />

	</node>

	<!-- <node pkg="trajectory_mapper" name="mapper_ext1" type="trajectory_mapper_node" output="screen"> -->
